@model SmartRegistry.Web.Models.Schedule

<div class="modal fade" id="createEventViewModal">
    <div class="fade in" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <p id="eventViewHeader" class="text-center text-capitalize"></p>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card-box">
                                <h2 class="text-center"><b>Add Calendar Schedule</b></h2><hr/>

                                <div class="inbox-widget slimscroll-alt" style="min-height: 200px;">
                                    <div>
                                        @*<form class="add-patient" asp-action="Create" asp-controller="Schedule" method="post" id="add-patient">*@
                                        <form method="post" id="add-patient" asp-action="Create" asp-controller="Schedules">
                                            <fieldset>
                                                <h2 class="fs-title">PERSON RESPONSIBLE FOR ACCOUNT</h2>
                                                <h3 class="fs-subtitle"></h3>
                                                <div class="col-lg-12">
                                                    <div class="col-lg-6">

                                                        <div class="form-group form-inline">
                                                            <label for="startTime">Start: <span>*</span></label>
                                                            <input type="datetime" asp-for="ScheduleFor" class="form-control" id="startTime" style="width:100%">
                                                        </div>

                                                    </div>

                                                    <div class="col-lg-6">
                                                        <div class="form-group form-inline">
                                                            <label for="endTime">End: <span>*</span></label>
                                                            <input type="datetime" asp-for="ScheduleTo" class="form-control" id="endTime"  style="width:100%">
                                                        </div>

                                                    </div>

                                                    <div class="col-lg-12">
                                                        <div class="form-group form-inline">
                                                            <label for="lectureRoom">Lecture Room <span>*</span></label>
                                                            @*<select asp-for="LectureRoom" class="form-control select2" id="lectureRoom"  style="width: 100%"></select>*@
                                                            <select asp-for="LectureRoom" class="form-control" id="lectureRoom" style="width: 100%">
                                                                <option value="10-G28">10-G28</option>
                                                                <option value="10-G230">10-G230</option>
                                                                <option value="10-G38">10-G38</option>
                                                            </select>
                                                        </div>

                                                        <div class="form-group form-inline">
                                                            <label for="subjectId">Subject Name <span>*</span></label>
                                                            <select asp-for="SubjectId" asp-items="ViewBag.SubjectId" class="form-control select2 subjects" id="subjectId"  style="width: 100%"></select>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="clearfix"></div>
                                                @*<input type="button" name="next" class="btn btn-primary btn-block" id="saveSchedule" value="Save" />*@
                                                <input type="submit" class="btn btn-primary btn-block" value="Save" />

                                            </fieldset>
                                        </form>
                                    </div>
                                </div>

                            </div> <!-- end card -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>