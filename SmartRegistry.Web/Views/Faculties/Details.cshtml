@using Microsoft.AspNetCore.Identity;
@using SmartRegistry.Web.Models
@model SmartRegistry.Web.ViewModels.FacultiesViewModels.FacultyViewModel

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container">
            
            <div class="row">
                <div class="panel-group">
                    <div class="col-md-12">
                        <div class="panel-default">
                            <div class="row">
                                <div class="row">
                                    <div class="col-md-12 well">
                                        <div class="col-md-11">
                                            <h2 class="text-center">@Model?.Faculty.Name</h2>
                                        </div>
                                        <div class="col-md-1">
                                            <a class="btn btn-primary" asp-controller="Faculties" asp-action="Edit" asp-route-id="@Model?.Faculty.FacultyId">Edit</a>
                                        </div>
                                    </div>
                                </div>
                                <p class="text-center">@Model?.Description</p>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="row">

                                        <div class="col-md-12">
                                            <div class="card-box">
                                                <h4 class="header-title m-t-0 m-b-30">Announcements</h4>
                                                <hr />

                                                <div class="inbox-widget slimscroll-alt" style="min-height: 302px;">

                                                    @if (Model.Announcements != null && Model.Announcements.Any())
                                                    {
                                                        <ul class="list-group list-group-flush">
                                                            @foreach (var announcement in Model.Announcements.OrderBy(a => a.CreatedAt.TimeOfDay))
                                                            {
                                                                <a href="#">
                                                                    <div class="inbox-item">
                                                                        <div class="inbox-item-img"><img src="assets/images/users/avatar-1.jpg" class="img-circle" alt=""></div>
                                                                        @if (SignInManager != null && SignInManager.IsSignedIn(this.User))
                                                                        {
                                                                            var user = await SignInManager.UserManager.FindByIdAsync(announcement.CreatedBy);
                                                                            <p class="inbox-item-author">@user</p>
                                                                        }

                                                                        <p class="inbox-item-text">@announcement.Message</p>
                                                                        <p class="inbox-item-date">@announcement.CreatedAt.ToShortDateString()</p>
                                                                    </div>
                                                                </a>



                                                                @*<li class="list-group-item">
                                                        <div>
                                                            <h4>
                                                                @announcement.Title<span class="pull-right">
