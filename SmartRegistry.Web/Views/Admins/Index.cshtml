@using Microsoft.AspNetCore.Identity
@using SmartRegistry.Web.Models

@inject UserManager<ApplicationUser> _UserManager
@inject RoleManager<IdentityRole> _RoleManager

<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container">

            <div class="row">
                <div class="col-md-12">
                    <div class="card-box">
                        @*<h4 class="header-title m-t-0 m-b-30">Messages</h4>*@
                        <h2 class="text-center"><b>Assign Roles to Lecturers</b></h2>

                        <div class="inbox-widget slimscroll-alt" style="min-height: 302px;">
                            <div Class="col-md-12">


                                <a class="btn btn-primary pull-right" asp-action="Create" style="margin: 10px 1px;">Add Admin</a>
                                <table class="table table-striped table-bordered table-hover" style="width:100%;margin-top:25px">
                                    <thead>
                                        <tr>
                                            <td> User Email </td>
                                            <td> Cellphone </td>
                                            <td> Role </td>
                                            <td> Action </td>
                                        </tr>
                                    </thead>
                                    <tbody>


                                        @{
                                            //var admins = await _UserManager.GetUsersInRoleAsync("System Admin");
                                            var admins = (await _UserManager.GetUsersInRoleAsync("System Admin")).ToList();
                                            admins.AddRange((await _UserManager.GetUsersInRoleAsync("Admin")).ToList());

                                            foreach (var admin in admins)
                                            {
                                                <tr>
                                                    <td>
                                                        <a href='mailto:@admin.UserName'>@admin.UserName</a>
                                                    </td>
                                                    @{
                                                        if (@admin.PhoneNumberConfirmed)
                                                        {
                                                            <td>@admin.PhoneNumber</td>
                                                        }
                                                        else
                                                        {
                                                            <td>NOT PROVIDED</td>
                                                        }
                                                    }

                                                    @if (await _UserManager.IsInRoleAsync(admin, "Admin"))
                                                    {
                                                        <td>
                                                            <div class="row">
                                                                <div class="col-md-12">
                                                                    <div class="col-md-6">ADMIN</div>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="row">
                                                                <div class="col-md-12">
                                                                    <div class="col-md-6">
                                                                        <a asp-action="RemoveFromRole" asp-route-userId="@admin.Id" asp-route-roleName="Admin" class="btn btn-danger">Revoke Privilege <i class="glyphicon glyphicon-trash"></i></a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </td>
                                                    }
                                                    else if (await _UserManager.IsInRoleAsync(admin, "System Admin"))
                                                    {
                                                        <td>SYSTEM ADMIN</td>
                                                        <td></td>
                                                    }
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>

                            </div>
                        </div>

                    </div> <!-- end card -->
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12">
                    <div class="card-box">
                        <div class="inbox-widget slimscroll-alt" style="min-height: 302px;">
                            <h2 class="text-center"><b>Sensor Registration</b></h2>
                            <hr />
                            <div class="row">
                                <div class="col-md-12">
                                    <h2 class="text-center">Assign Student With Sensor ID</h2>
                                    <form asp-action="Create">
                                        <div class="col-md-12 col-md-offset-0">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="col-md-12">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">SENSOR ID</label>
                                                        <select asp-items="ViewBag.SensorIds" class="form-control"></select>
                                                        <span class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">STUDENT</label>
                                                        <select asp-items="ViewBag.StudentIds" class="form-control"></select>
                                                        <span class="text-danger"></span>
                                                    </div>
                                                </div>

                                                @*<div class="form-group">*@
                                                <input type="submit" value="Add as Admin" class="btn btn-primary btn-block" />
                                                @*</div>*@
                                            </div>

                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div> <!-- end card -->
                </div>
            </div>


        </div>
        <!-- container -->

    </div> <!-- content -->

    <footer class="footer text-right">
        @{
            <i>@string.Format("{0} © SmartRegistry", DateTime.Now.Year)</i>
        }

    </footer>

</div>