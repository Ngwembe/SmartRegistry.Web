@model SmartRegistry.Web.Models.Lecturer

@{
    ViewData["Title"] = "Create";
}



<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container">

            <h2 class="text-center"><b>LECTURER ROLE ASSIGNMENT</b></h2>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <h2 class="text-center">Assign user Role </h2>
                    <form asp-action="Create">
                        <div class="col-md-12 col-md-offset-0">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="col-md-12">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="LecturerId" class="control-label"></label>
                                        <select asp-for="LecturerId" class="form-control" asp-items="ViewBag.Lecturer"></select>
                                        <span asp-validation-for="LecturerId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Assign To Role</label>
                                        <select asp-for="AccountId" class="form-control" asp-items="ViewBag.Roles"></select>
                                        <span asp-validation-for="AccountId" class="text-danger"></span>
                                    </div>
                                </div>

                                @*<div class="form-group">*@
                                <input type="submit" value="Add as Admin" class="btn btn-primary btn-block" />
                                @*</div>*@
                            </div>
                
                        </div>
                    </form>
                </div>
            </div>
            <br /><br />
            <div>
                <a asp-action="Index" class="btn btn-default">Back to List</a>
            </div>

        </div>
        <!-- container -->

    </div> <!-- content -->

    <footer class="footer text-right">
        @{
            <i>@string.Format("{0} © SmartRegistry", DateTime.Now.Year)</i>
        }

    </footer>

</div>